<div class="change-password">
    <h1 class="change-password__title">Đổi mật khẩu</h1>
    <form class="change-password__form" id="change-password">
        <div class="form_group">
            <label class="form_group--title" for="passwordOld">Mật khẩu hiện tại</label>
            <input class="form_group--input" type="text" id="passwordOld" name="passwordOld" placeholder="Insert password present...!" />
        </div>
        <div class="form_group">
            <label class="form_group--title" for="newPassword">Mật khẩu mới</label>
            <input class="form_group--input" type="password" id="newPassword" name="newPassword" placeholder="Insert new password...!" />
        </div>
        <div class="form_group">
            <label class="form_group--title" for="newPasswordConfirm">Nhập lại mật khẩu mới</label>
            <input class="form_group--input" type="password" id="newPasswordConfirm" name="newPasswordConfirm" placeholder="Confirm new password...!" />
        </div>
        <div class="form_group">
            <button class="btn btn-primary">Cập nhật mật khẩu</button>
        </div>
    </form>
</div>